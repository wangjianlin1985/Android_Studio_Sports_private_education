<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="StudentParent" table="StudentParent">

          <!-- 主键用户名 -->
          <id name="spUserName" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 登录密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 家长姓名 -->
          <property
            name="parentName"
            column="parentName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 手机号 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 多对一属性: 城市 -->
          <many-to-one name="cityObj"
            column="cityObj"
            class="City"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 学生性别 -->
          <property
            name="studentSex"
            column="studentSex"
            type="string"
            length="4"
          />

          <!-- 多对一属性: 年龄范围 -->
          <many-to-one name="ageRangeObj"
            column="ageRangeObj"
            class="AgeRange"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单整型属性: 学生年龄 -->
          <property
            name="age"
            column="age"
            type="int"

          />

          <!-- 简单字符串属性: 学生学校 -->
          <property
            name="school"
            column="school"
            type="string"
            length="50"
          />

          <!-- 多对一属性: 现状态 -->
          <many-to-one name="nowStateObj"
            column="nowStateObj"
            class="NowState"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单图片属性: 学生照片 -->
          <property
            name="studentPhoto"
            column="studentPhoto"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 学生介绍 -->
          <property
            name="studentDesc"
            column="studentDesc"
            type="string"
            length="3000"
          />

          <!-- 简单字符串属性: 审核状态 -->
          <property
            name="shzt"
            column="shzt"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 注册时间 -->
          <property
            name="regTime"
            column="regTime"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
